{
  "meta_file": "samples.tsv",

  "dir_names": {
    "qc_pre_dir": "qc/pre",
    "qc_post_dir": "qc/post",
    "trimmed_dir": "trimmed",
    "dehost_dir": "dehost",
    "mapped_dir": "mapped",
    "filtered_dir": "filtered",
    "mpileup_dir": "mpileup",
    "varscan_dir": "varscan",
    "consensus_dir": "consensus",
    "multiqc_dir": "multiqc"
  },

  "file_names": {
    "mkdir_done": ".dirs_ready",
    "index_ready": ".index_ready"
  },

  "tool_version": {
    "cutadapt": "4.9",
    "fastqc": "0.11.9",
    "fastq_screen": "0.14.1",
    "kraken2": "2.1.2",
    "bwa": "0.7.17",
    "bowtie2": "2.5.4",
    "samtools": "1.16.1 ",
    "bcftools": "1.14",
    "bedtools": "2.30.0",
    "ivar": "1.2.2",
    "tabix": "1.21",
    "multiqc": "1.31"
  },

  "params": {
    "aligner": "bowtie2",                    // "bwa" or "bowtie2"
    "bwa":     { "threads": 8 },
    "bowtie2": { "threads": 8 },

    "kraken2": { "db": "/path/to/kraken2_host_db", "threads": 8 },
    "fastq_screen": { "conf": "/path/to/fastq_screen.conf" },

    "ivar": { "primer_bed": "primers.bed" },
    "mpileup": { "depth": 5000000 },
    "varscan": { "snp_qual_threshold": 20, "min_cov": 10 }
  }
}
